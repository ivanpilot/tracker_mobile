{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "no-console": false,
        "no-debugger": false,
        "jsx-wrap-multiline": true,
        "jsx-alignment": true,
        "jsx-curly-spacing": "always",
        "jsx-space-before-trailing-slash": true,
        "ordered-imports": true
    }
}
